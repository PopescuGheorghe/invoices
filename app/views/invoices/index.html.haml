.container-fluid
  .row
    .col-md-8.col-md-offset-2
      %p#notice= notice
      %h1 Listing Invoices
      %table.table
        %thead
          %tr
            %th Company
            %th{:colspan => "3"}
            %th Customer
            %th{:colspan => "3"}
            %th Value
        %tbody
          - @invoices.each do |invoice|
            %tr
              %td= invoice.company.name
              %td{:colspan => "3"}
              %td= invoice.customer.name
              %td{:colspan => "3"}
              %td= number_to_currency(invoice.total)
              %td= link_to 'Show', invoice
              %td= link_to 'Edit', edit_invoice_path(invoice)
              %td= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }
      %br/
      = link_to 'New Invoice', new_invoice_path, class: "btn btn-primary pull-right"
