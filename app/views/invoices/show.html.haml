.container-fluid
  .row
    .col-md-8.col-md-offset-2
      %p#notice= notice
      %h2== Seller: #{@invoice.company.name}  -  Customer: #{@invoice.customer.name}
      %table.table
        %thead
          %th Name
          %th Description
          %th Unit Price
          %th Quantity
          %th Total price
        %tbody
          - @invoice.items.each do |item|
            %tr
              %td= item.name
              %td= item.description
              %td= item.price
              %td= item.quantity
              %td= number_to_currency(item.total_price)
