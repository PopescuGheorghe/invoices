= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name, class: "form-control"
  .field
    = f.label :description
    %br/
    = f.text_area :description, class: "form-control"
  .field
    = f.label :price
    %br/
    = f.text_field :price, class: "form-control"
  .field
    = f.label :quantity
    %br/
    = f.number_field :quantity, class: "form-control"
  .field
    = f.collection_select :invoice_id, Invoice.all,:id,:id, {prompt: "Select a Invoice"}, {class: "form-control"}
  .actions.pull-right
    = f.button :submit, class: "btn btn-primary"
    = link_to 'Back', items_path, class: "btn btn-default"
